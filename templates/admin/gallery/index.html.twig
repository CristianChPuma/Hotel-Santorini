{% extends 'admin/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

  <h2>Galería</h2>
  <p>Administra Las Fotografías Mostradas en tu Galería</p>
        <div class="uk-margin">
          <div uk-form-custom>
          <input data-for="home-gallery-container" type="file" accept="image/png, image/jpeg" class="add-image" data-gallery-id="2" >
          <button class="uk-button link-style-a" type="button" tabindex="-1"><span class="uk-icon uk-margin-small-right" uk-icon="icon: plus"></span> Agregar</button>
          </div>
           </div>

  <hr class="uk-hr uk-margin-medium">

  <div class="uk-section uk-section-small">
      <div id="home-gallery-container" class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid="masonry: true">

        {% for item in gallery|reverse %}
        <div class="inview-animation" id="image-gallery-container-{{ item.id }}">
          <div class="uk-inline-clip uk-transition-toggle">
            <img src="{{ asset('uploads/' ~ item.path) }}" alt="">
            <div class="uk-transition-fade uk-position-cover uk-position-small uk-overlay uk-flex uk-flex-center uk-flex-middle">
          <a data-id="{{ item.id }}" data-gallery-id="2" class="link-style-a delete-image"><span class="uk-icon" uk-icon="icon: trash;"></span></a>
         </div>
          </div>
        </div>
        {% endfor %}

      </div>
  </div>

  {% endblock %}
