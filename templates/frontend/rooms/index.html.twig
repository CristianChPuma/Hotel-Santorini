{% extends 'frontend/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="uk-section">

  <div class="uk-container tm-container-medium uk-position-relative">

    <div class="uk-text-center uk-width-3-5 uk-margin-auto">

      <div class="uk-inline">
        <img class="header-image uk-hidden" uk-img src="{{ asset('assets/components/rooms-header.png') }}" alt="">
        <canvas id="canvas-fog"></canvas>
        <div class="uk-position-center">
          <h1 class="sectiontitle">{{ title }}</h1>
        </div>
      </div>

    </div>

  </div>

</div>

<div class="uk-section">

  <div class="uk-container tm-container-medium">
    <div class="uk-width-large">
      <h1>Habitaciones Disponibles</h1>
    </div>
  </div>

</div>

<div class="uk-section">

 <div class="uk-container tm-container-medium uk-flex uk-flex-right">

     <div class="width-left-8">

        <div class="uk-child-width-1-3@m uk-child-width-1-1 uk-child-width-1-2@s uk-grid-match" uk-grid>

          {% for room in rooms %}
          {% include 'frontend/components/roomcard.html.twig' with {'room' : room, 'style' : 'front'} %}
          {% endfor %}

        </div>

     </div>

 </div>

</div>

<div class="uk-position-top">
  <div class="uk-container tm-container-medium">
    {% include 'frontend/components/mainnav.html.twig' %}
  </div>
</div>


{% include 'frontend/components/footer.html.twig' %}

{% endblock %}
